<div class="container my-5">
    <div class="row details-snippet1">
        <div class="col-md-7">
            <div class="row">
                <div class="col-md-2 mini-preview">
                    {{#each product.images}}
                    <img class="img-fluid" src="/uploads/{{this.fileName}}" alt="Preview">
                   {{/each}}
                </div>
                <div class="col-md-10">
                    <div class="product-image">
                        {{#with product.images.[0]}}
                        <img class="img-fluid" src="/uploads/{{this.fileName}}" id="zoom" alt="Main Image">
                        {{/with}}
                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-5">
            <div class="category mt-3 mb-3"><span class="theme-text">Brand:</span>{{product.brand}}</div>
            <div class="title">{{product.Name}}</div>
            <div class="theme-text subtitle mt-3 mb-3">Brief Description:</div>
            <div class="brief-description mb-4">
                {{product.Description}}
            </div>
            <div class="ratings my-2">
                <div class="stars d-flex">
                    <div class="theme-text mr-2">Product Ratings: </div>
                    <div>&#9733;</div>
                    <div>&#9733;</div>
                    <div>&#9733;</div>
                    <div>&#9733;</div>
                    <div>&#9733;</div>
                    <div class="ml-2">(4.5) 50 Reviews</div>
                </div>
            </div>
            <hr>
            <div class="price my-2">
                {{#if_eq product.offers}}
                {{product.actualPrice}}
                <span class="original-price ms-2">MRP</span>
                <strike class="original-price ms-4">{{product.Price}}</strike>
                <span class="original-price ms-3" style="color:blue; ">({{product.offers}}%Off)
                </span>
                {{else}}
                <span class="original-price ms-2">MRP</span>
                <span class="original-price ms-4">{{product.Price}}</span>
                {{/if_eq}}
            </div>
            

          <!-- TO REMOVE COLORS -->
            
            <div class="row">
                <div class="col-md-9 mt-1"><span class="" style="color: green;">Inclusive of all taxes</span></div>
            </div>
           
            <div class="row">
                <div class="col-md-9 ms-5 mt-4"><button class="btn addBtn btn-block ms-5" onclick="addtoWish('{{product._id}}')">Add to Wishlist</button>
                <span><button class="btn addBtn btn-block ms-5" onclick="addToCart('{{product._id}}')">Add to Cart</button></span></div>
            </div>
            
            <hr>
             <div class="theme-text subtitle mt-3 mb-3">100% Original Products</div>
             <div class="theme-text subtitle mt-3 mb-3">Pay on delivery might be available</div>
             <div class="theme-text subtitle mt-3 mb-3">Easy 30 days returns and exchanges</div>
             <div class="theme-text subtitle mt-3 mb-3">Try & Buy might be available</div>
            <hr>
            <div style="color: black;" class="theme-text mr-2">BEST OFFERS </div>
            <div style="color: black;" class="theme-text subtitle mt-3 mb-3">Best Price:Rs. {{product.actualPrice}}</div>
        </div>
        
         
    </div>

