<script>
    $(document).ready(function()
{
    $('.mini-preview img').click(function()
    {
    var image=$(this).attr('src')
    $('.product-image img').attr('src',image)
    })
    $('#zoom').imagezoomsl({
        zoomrange:[4,4]
    })
    
})

function addToCart(proId)
  {
      $.ajax({
      url:'/add-to-cart/'+proId,
      method:'get',
      success:(response)=>
      {
        
        Swal.fire({
         position: 'top-end',
        icon: 'success',
        title: 'Product added to cart',
        showConfirmButton: false,
        timer: 1500
        })
        
        if(response.status)
        {
          let count=$('#cart-count').html()
          count=parseInt(count)+1
          $("#cart-count").html(count)
        }
        {{!-- location.reload() --}}
       
      }
    })
  }
  function addtoWish(proId)
  {
    $.ajax({
      url:'/wishlist/'+proId,
      method:'get',
      success:(response)=>
      {
        Swal.fire({
        position: 'bottom-end',
        icon: 'Success',
        title:'Product added to Wishlist',
        showConfirmButton: false,
        timer: 1500
        })
       
      }
    })
  }

</script>
