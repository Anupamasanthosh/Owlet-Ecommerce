        <div class="row justify-content-center">
          <div class="col-12">
            <div class="card shadow-2-strong" style="background-color: #f5f7fa;">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-borderless mb-0" id="myTable">
                    <thead>
                      <tr>
                        <th scope="col">
          <tr>
            <th scope="col">Coupon Code</th>
            <th scope="col">Discount</th>
            <th scope="col">Minimum Price</th>
            <th scope="col">From</th>
            <th scope="col">To</th>
            
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each coupons}}
            <tr>
              <td>{{this.Code}}</td>
              <td>{{this.Discount}}</td>
              <td>{{this.Minimum}}</td>
              <td>{{this.From}}</td>
              <td>{{this.To}}</td>
             
              <td><a href="/admin/editCoupons/{{this._id}}" class="btn border-shadow update">
              <span class="text-gradient"><i class="fa-solid fa-pen-to-square"></i></span>
              </a></td>
              <td><a href="/admin/deleteCoupons/{{this._id}}" class="btn border-shadow delete">
              <span class="text-gradient"><i class="fa-solid fa-trash-can" onclick="return confirm('Are  you sure to delete {{this.Name}}')"></i></span>
              </a></td>
            </tr>
          {{/each}}
       
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
