<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Coupons</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

      <form action="/admin/add-coupons" method="POST">
         <div class="card-body">
          
           <div class="row">
              <div class="md-form mb-0">
                <input type="text" id="code" name="code" class="form-control" >
                  <label for="code" class="">Coupon Code</label>
              </div>
            </div>
            
            <div class="row">
              <div class="md-form mb-0">
                <input type="text" id="Discount" name="Discount" class="form-control" >
                  <label for="Discount" class="">Discount on Amount</label>
              </div>
            </div>
             <div class="row">
              <div class="md-form mb-0">
                <input type="text" id="Minimum" name="Minimum" class="form-control" >
                  <label for="Minimum" class="">Minimum Price</label>
              </div>
            </div>
            
            <div class="row">
              
              <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="date" id="from" name="from" class="form-control">
                            <label for="from" class="">From</label>
                        </div>
              </div>
              <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="date" id="to" name="to" class="form-control">
                            <label for="to" class="">To</label>
                        </div>
              </div>
            </div>
            
              
            <hr>
          </div>
        
      
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-outline-dark">Save</button>
      </div>
        </form>
    </div>
  </div>
