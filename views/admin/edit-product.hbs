<section class="container me-5 mt-3">
  <div class="row">
    <div class="mask d-flex align-items-center h-100">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12">
            <div class="card shadow-2-strong" style="background-color: #f5f7fa;">
              <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0">Edit Products</h5>
          </div>
          <div class="card-body">
            <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
              <label for="">Name</label>
                    <input type="text" class="form-control col-xs-4" name="Name" value="{{product.Name}}"/>
                    
                    <label for="" class="mt-4">Price</label>
                    <input type="number" class="form-control" name="Price"value="{{product.Price}}" />
                    
                    <label for="" class="mt-4">Catagory</label>
          
                    <select class="form-select" id="Category" name="Category">
                      {{#each category}}
                    <option value="{{this.Name}}" selected>{{this.Name}}</option>
                      {{/each}}
                    </select>
                  <label for="" class="mt-4">Brand</label>
          
                    <select class="form-select" id="Brand" name="Brand">
                      {{#each brand}}
                    <option value="{{this.Name}}" selected>{{this.Name}}</option>
                      {{/each}}
                    </select>

                    <label for="" class="mt-4">Description</label>
                    <input type="text" class="form-control" name="Description" value="{{product.Description}}" />
                    
                    <label for="" class="mt-4">Quantity</label>
                    <input type="text" class="form-control" name="Quantity" value="{{product.Quantity}}"/>

                    <label for="" class="mt-4">Offers</label>
                    <input type="number" class="form-control" name="offers" value="{{product.offers}}"/>
                   
                    <label for="" class="mt-4">Image</label>
                     {{#each product.images}}
                        <img class="mb-4 mt-4" style="width: 50px;height:50px" src="/uploads/{{this.fileName}}">
                      {{/each}}
                    <input type="file" class="form-control" name="image" id="image" multiple/>
                    
              <button type="submit" class="btn btn-dark mt-4">Edit Products</button>
            </form>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
